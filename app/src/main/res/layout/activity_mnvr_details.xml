<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MnvrDetailsActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/rl"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/tv1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="MNVR Permanant MNVR ID:"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@+id/tv1"
            android:id="@+id/tv2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Current Coach MNVR ID:"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/tv2"
            android:id="@+id/tv3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Power:"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@+id/tv3"
            android:id="@+id/tv4"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="WiFi:"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tv1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="XYZ123456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@id/tv2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="12433-A1-001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@id/tv2"
            android:layout_toRightOf="@+id/tv1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_below="@id/tv3"
            android:layout_toRightOf="@id/tv1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_width="5dp"
        android:layout_height="match_parent">

    </View>
    <ListView
        android:id="@+id/lvMNVR"
        android:layout_below="@+id/rl"
        android:layout_marginBottom="60dp"
        android:paddingLeft="10dp"
        android:dividerHeight="0dp"
        android:divider="@color/white"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_mnvr_ID"
            android:layout_alignParentBottom="true"
            android:text="Coach MNVR ID"
            android:background="@drawable/btn_log"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_user"
            android:layout_alignParentBottom="true"
            android:text="User Details"
            android:background="@drawable/btn_log"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>