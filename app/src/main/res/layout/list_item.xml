<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:background="#FFF"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/iv"
                android:background="@drawable/train_color"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv"
                android:layout_width="60dp"
                android:layout_height="20dp">
                <View
                    android:layout_marginTop="2dp"
                    android:background="@drawable/circle"
                    android:layout_width="5dp"
                    android:layout_height="5dp"/>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/circle"
                    android:layout_width="5dp"
                    android:layout_height="5dp"/>
                <View
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/line"
                    android:layout_width="52dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/tv_travel_time"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="35:00 hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="#795548"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/tv_tname"
                android:text="Rajdhani Express"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="#795548"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/tv_trainNo"
                android:layout_toRightOf="@id/tv_tname"
                android:hint="(12433)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@+id/tv_tname"
                android:id="@+id/tv_start_station"
                android:text="Chennai (MAA)"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/tv_tname"
                android:id="@+id/tv_end_station"
                android:layout_toRightOf="@id/tv_tname"
                android:text="New Delhi(NDLS)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="#00695C"
                android:textSize="14sp"
                android:layout_below="@+id/tv_start_station"
                android:id="@+id/tv_start_time"
                android:text="06:40"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="#00695C"
                android:textSize="14sp"
                android:layout_below="@id/tv_start_station"
                android:id="@+id/tv_end_time"
                android:layout_toRightOf="@id/tv_tname"
                android:text="10:35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>